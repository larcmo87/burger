<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center">            
          <img src="https://media1.giphy.com/media/ToMjGplHPoYqSg7oACc/200w.webp#41-grid1" id="burgerImage">
          <div id="eat-da-burger-marquee">Eat-Da-Burger</div>         
    </div>
</div>  

<div class="row">
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 center">
    <ul class="burgers-to-devoure">
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
             
             <form action="/{{this.id}}?_method=PUT" method="POST" class="devoure-form">
                
                <input type="text" value="{{this.id}}. {{this.burger_name}}" class="burger-name">
                <button type="submit" class="devour-btn">Devour Burger!</button>
            </form>             
          </li>      
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 center">  
    <ul class="burgers-devoured">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>              
               <form action="/" method="GET">
                  <input type="text" name="burger-to-be-devoured" class="burger-name" value="{{this.id}}. {{this.burger_name}}">                 
              </form>             
            </li>      
          {{/if}}
        {{/each}}
      </ul>                 
  </div>
</div>
<div class="row">

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center"> 
              
    <form action="/" method="POST">
      <input type="text" name="burger_type" class="burger-name"><br>      
      <button type="submit" class="btn btn-primary btn-lg" id="submit-btn">Submit</button>
      
    </form>  
      <h4> Enter a burger you want to eat. Click the "Submit" button.</h4>          
  </div>
</div>  
